<div class="input-group">

    <%= form_tag statistic_path, :method => 'get', :class => "navbar-form", :role => "search" do %>
        <%= hidden_field_tag :direction, params[:direction] %>
        <%= hidden_field_tag :sort, params[:sort] %>
        <p>
          <%= text_field_tag :search, params[:search], placeholder: 'Введите название' , :class=>"form-control"%>
        </p>
        <p>Модель атрибуции: </p>

        <%= radio_button_tag(:who_win, "1") %>
        <%= label_tag(:who_win, "Посетитель засчитывается к каналу, с которого было совершено первое посещение") %>
        <br>
        <%= radio_button_tag(:who_win, "2") %>
        <%= label_tag(:who_win, "Посетитель засчитывается к каналу, с которого было совершено последнее посещение") %>
        <br>
        <div class="input-group-btn">
          <%= submit_tag "Поиск", :name => nil, :class=> "btn btn-default"%>
        </div>
        </p>

    <% end %>
</div>
<table class="table-bordered table-hover">
  <tr>
    <th>ID</th>
    <th>Экскурсия</th>
    <th>Канал</th>
    <th>Количество посетителей</th>
    <th>Выручка</th>
  </tr>
  <% @activities.each do |activity| %>
      <tr>
        <th><%= activity.id %></th>
        <th><%= link_to activity.title, activity %></th>
        <th><%= activity.medium_title %></th>
        <th><%= activity.visitors.count %></th>
        <th><%= activity.mediums_proceed %></th>
      </tr>
  <% end %>
</table>
<%= will_paginate %>
