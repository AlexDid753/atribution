<%= form_tag activities_path, :method => 'get' do %>
    <%= hidden_field_tag :direction, params[:direction] %>
    <%= hidden_field_tag :sort, params[:sort] %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Поиск", :name => nil %>
    </p>
<% end %>

<table class="table-bordered table-hover">
  <tr>
    <th>ID</th>
    <th>Экскурсия</th>
    <th>Количество посетителей</th>
    <th>Суммарная выручка</th>
  </tr>
  <% @activities.each do |activity| %>
      <tr>
        <th><%= activity.id %></th>
        <th><%= link_to activity.title, activity %></th>
        <th><%= activity.visitors.count %></th>
        <th><%= activity.proceeds %></th>
      </tr>
  <% end %>
</table>
<%= will_paginate %>
